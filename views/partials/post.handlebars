<article class ="postContainer" id="post-container">
	<img class = "postImage" src="{{image}}" width= '150' height= '150'>
	<div class="content">
		<p class="author">
			<a href="{{author-link}}">{{author}}</a>
		</p>
		<p class="title">
			<a href="{{title-link}}">{{title}}</a>
		</p>
		<p class="text">
			{{text}}
		</p>
		<p class="id">
			{{postID}}
		</p>
		<p class="topic">
			{{topic}}
		</p>
	</div>
</article>
